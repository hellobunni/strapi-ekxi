{
  "kind": "singleType",
  "collectionName": "restaurant",
  "info": {
    "singularName": "restaurant",
    "pluralName": "restaurants",
    "displayName": "Restaurant",
    "description": "Restaurant basic information"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "tagline": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "founded": {
      "type": "integer",
      "required": true
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "totalReviews": {
      "type": "integer",
      "default": 0
    },
    "totalServed": {
      "type": "integer",
      "default": 0
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "carousel_images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "email": {
      "type": "email"
    },
    "phone_number": {
      "type": "string"
    },
    "service_area": {
      "type": "string"
    }
  }
}
