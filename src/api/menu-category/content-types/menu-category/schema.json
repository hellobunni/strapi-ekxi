{
  "kind": "collectionType",
  "collectionName": "menu_categories",
  "info": {
    "singularName": "menu-category",
    "pluralName": "menu-categories",
    "displayName": "Menu Category",
    "description": "Menu categories grouping menu items"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "menuItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::menu-item.menu-item"
    },
    "icon": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}

